<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/main.css" />
    <title>Edit Set</title>
  </head>
  <body>
    <%- include('partials/navbar', {page: ''}) %>

    <div class="container mx-auto my-5">
      <div
        class="hero rounded hero-lg bg-base-200 bg-cover bg-center"
        style="background-image: url(/images/944250.jpg)"
      >
        <div class="hero-overlay bg-opacity-60"></div>
        <div class="hero-content text-center m-6">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Edit Set:</h1>
            <p class="py-6"><%=set.name%></p>
          </div>
        </div>
      </div>

      <div>
        <form class="editSetForm" action="/lego/editSet" method="POST" >
          <div class="form-control">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required value="<%= set.name %>" />
          </div>
          <div class="form-control">
            <label for="year">Year</label>
            <input type="number" id="year" name="year" required value="<%= set.year %>" />
          </div>
          <div class="form-control">
            <label for="num_parts">Number of Parts</label>
            <input type="number" id="num_parts" name="num_parts" required value="<%= set.num_parts %>" />
          </div>
          <div class="form-control">
            <label for="img_url">Image URL</label>
            <input type="url" id="img_url" name="img_url" required value="<%= set.img_url %>"/>
          </div>
          <div class="form-control">
            <label for="theme_id">Theme</label>
            <select id="theme_id" name="theme_id" required>
                <% themes.forEach(theme => { %>
                    <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                    <%= theme.name %>
                    </option>
                    <% }) %>
            </select>
          </div>
          <div class="form-control">
            <label for="set_num">Set Number</label>
            <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" class="cursor-not-allowed"
            readonly />
          </div>

          <button class="btn btn-primary" type="submit" >Update Set</button>
        </form>
        <a class="btn btn-error mt-3" href="/lego/deleteSet/<%= set.set_num %>">Delete Set</a>
      </div>
    </div>
  </body>
</html>
